@model IEnumerable<GroupVM>

<div class="container">
    <div class="table-wrapper">
        <div class="table-title">
            <div class="row">
                <form asp-controller="Group" asp-action="Index" method="post">
                    <p>
                        Название: <input type="text" name="search" />
                        <input type="submit" value="Поиск" />
                    </p>
                </form>
                <div class="col-sm-6">
                    <a asp-controller="Group" asp-action="Create" class="btn btn-success">
                        <i class="material-icons">&#xE147;</i>
                        <span>Добавить группу</span>
                    </a>
                </div>
            </div>
        </div>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.InstructorId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.InstructorSpecialization)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SubscribersCount)
                    </th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(model => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.InstructorId)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.InstructorSpecialization)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.SubscribersCount)
                        </td>
                        <td>
                            <a asp-action="Update" asp-controller="Group" asp-route-id="@item.Id" class="edit">Редактирование</a>
                            <a asp-action="Delete" asp-controller="Group" asp-route-id="@item.Id" class="delete">Удаление</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>