@model IEnumerable<GroupVM>

<div class="container">
    <div class="table-wrapper">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.InstructorId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.InstructorSpecialization)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SubscribersCount)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(model => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.InstructorId)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.InstructorSpecialization)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.SubscribersCount)
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>